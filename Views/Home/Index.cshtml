@{
    ViewData["Title"] = "South Carolina Badminton Tournament";
}
  
    <div class="row">
        <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="sLname" class="form-control" placeholder="FirstName *" id="FirstName" >
                            <p class="help-block text-danger"></p>
                        </div>

                        <div class="form-group">
                            <input type="text" name="sFname" class="form-control" placeholder="LastName *" id="LastName" r>
                            <p class="help-block text-danger"></p>
                        </div>

                        <div class="form-group">
                            <input type="text" name="sEmail" class="form-control" placeholder="Email *" id="Email" >
                            <p class="help-block text-danger"></p>
                        </div>

                        <div class="form-group">
                            <input type="tel" name="sphone" class="form-control" placeholder="Téléphone *" id="Phone" >
                            <p class="help-block text-danger"></p>
                        </div>

                        <p>Please select your event type</p>
                        <div>
                            <input type="radio" name="eventType" value="Open" id="Open" checked>
                            <label for="xs">Open</label>
                        </div>
                        <div>
                            <input type="radio" name="eventType" value="Intermediate" id="s">
                            <label for="s">Intermediate</label>
                        </div>
                        <div>
                            <input type="radio" name="eventType" value="Social" id="Social">
                            <label for="m">Social</label>
                        </div>
                        <br>
                        <p>Please select your matches</p>
                        <div class="form-check">
                            <input class="form-check-input" onclick="mensSingles();" type="checkbox" value="" id="MensSingles" >
                            <label class="form-check-label" for="MensSingles">Men's Singles</label>
                        </div>
                        <br>
                        <div class="form-check">
                            <input class="form-check-input" onclick="womensSingles();" type="checkbox" value="" id="WomensSingles">
                            <label class="form-check-label" for="WomensSingles">Women's Singles</label>
                        </div>
                        <br>
                        <div class="form-check">
                            <input class="form-check-input" onclick="mensDoubles();" type="checkbox" value="" id="MensDoubles">
                            <label class="form-check-label" for="MensDoubles">Men's Doubles</label>
                            <div class="invisibleMensDoubles" id ="invisibleMensDoubles" style="display: none">
                                <input type="text" name="mensdPartner" class="form-control" placeholder="Partners name *" id="mensdPartner" >
                            </div>                            
                        </div> 
                        <br>
                        <div class="form-check">
                            <input class="form-check-input" onclick="womensDoubles();" type="checkbox" value="" id="WomensDoubles">
                            <label class="form-check-label" for="MensDoubles">Women's Doubles</label>
                             <div class="invisibleWomensDoubles" id ="invisibleWomensDoubles" style="display: none">
                                <input type="text" name="womensdPartner" class="form-control" placeholder="Partners name *" id="womensdPartner" >
                            </div> 
                        </div>
                        <br>
                        <div class="form-check">
                            <input class="form-check-input" onclick="mixedDoubles();" type="checkbox" value="" id="MixedDoubles">
                            <label class="form-check-label" for="MixedDoubles">Mixed Doubles</label>
                             <div class="invisibleMixedDoubles" id ="invisibleMixedDoubles" style="display: none">
                                <input type="text" name="mixeddPartner" class="form-control" placeholder="Partners name *" id="mixeddPartner" >
                            </div> 
                        </div>
                        <br>
                        <br>
                        Amount <p id="Amount"> 15 $ </p>
                        <div class="col-lg-12 text-center">
                            <div id="success"> Plase verify all the details before validating the form</div>
                            <button type="submit" class="btn btn-success" onclick="SubmitForm();">Register</button>
                        </div>
